<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_7sdp"
        android:background="@drawable/et_border_translate_shape"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvSend1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:ellipsize="marquee"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="msg1"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="#E5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSend2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="msg2"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <ImageView
                android:id="@+id/ivSpeck1"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_speaker_translate" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llReceive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_7sdp"
        android:background="@drawable/et_border_translate_shape"
        android:backgroundTint="#E1D5F9"
        android:orientation="vertical"
        android:paddingVertical="@dimen/_5sdp">

        <TextView
            android:id="@+id/tvReceive1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:ellipsize="marquee"
            android:fontFamily="@font/lato_regular"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="Receive1"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvReceive2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Receive2"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp" />

            <ImageView
                android:id="@+id/ivSpeck2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_speaker_translate" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>