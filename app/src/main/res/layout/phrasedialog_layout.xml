<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/phrasedetail_bg"
    android:elevation="5dp">

    <TextView
        android:id="@+id/tv_phrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ok"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toTopOf="@+id/tv_phrase_translation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_phrase_translation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ok"
        android:textColor="@color/blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phrase" />

    <ImageView
        android:id="@+id/img_copyphrase"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:src="@drawable/ic_copy_translate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_phrase_translation"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/img_phrase_speak"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:padding="10dp"
        android:src="@drawable/ic_speaker_translate"
        app:layout_constraintBottom_toBottomOf="@+id/img_copyphrase"
        app:layout_constraintStart_toEndOf="@+id/img_copyphrase"
        app:layout_constraintTop_toTopOf="@+id/img_copyphrase"
        app:tint="@color/blue" />

    <ImageView
        android:id="@+id/img_phrase_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:src="@drawable/ic_share_icon"
        app:layout_constraintBottom_toBottomOf="@+id/img_copyphrase"
        app:layout_constraintEnd_toStartOf="@+id/img_copyphrase"
        app:layout_constraintTop_toTopOf="@+id/img_copyphrase"
        app:tint="@color/blue" />
</androidx.constraintlayout.widget.ConstraintLayout>
