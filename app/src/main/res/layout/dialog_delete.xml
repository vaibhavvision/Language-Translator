<?xml version="1.0" encoding="utf-8"?><!-- dialog_delete_cancel.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_lang_base_shape"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/lato_semi_bold"
        android:text="Are you sure you want to delete?"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_lang_1"
            android:text="Delete"
            android:textSize="@dimen/_12ssp"
            android:textAllCaps="false"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAllCaps="false"
            android:fontFamily="@font/lato_regular"
            android:background="@drawable/et_border_translate_shape"
            android:text="Cancel"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
